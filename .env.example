# ─────────────────────────────────────────────────────────────────────────────
# Database - PostgreSQL/Supabase
# ─────────────────────────────────────────────────────────────────────────────

# PostgreSQL (managed service or your own container)
DATABASE_URL=postgresql+asyncpg://nonagon:nonagon@localhost:5432/nonagon

# OR Supabase PostgreSQL (uncomment and fill in)
# DATABASE_URL=postgresql+asyncpg://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres
# SUPABASE_DB_URL=postgresql://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-[REGION].pooler.supabase.com:5432/postgres

# Database name (used for some operations)
DB_NAME=nonagon

# SQLAlchemy settings
SQL_ECHO=false
SQL_POOL_SIZE=5
SQL_MAX_OVERFLOW=10

# ─────────────────────────────────────────────────────────────────────────────
# Discord Bot
# ─────────────────────────────────────────────────────────────────────────────

# Discord credentials
# BOT_TOKEN is required for the bot to authenticate with the gateway.
BOT_TOKEN=""
BOT_CLIENT_ID=""

# Quest board channel ID (optional)
QUEST_BOARD_CHANNEL_ID=

# Use adapter for bot flush persistence
BOT_FLUSH_VIA_ADAPTER=false

# ─────────────────────────────────────────────────────────────────────────────
# API Configuration
# ─────────────────────────────────────────────────────────────────────────────

# GraphQL API URL (for bot to call)
GRAPHQL_API_URL=http://localhost:8000/graphql

# ─────────────────────────────────────────────────────────────────────────────
# Frontend
# ─────────────────────────────────────────────────────────────────────────────

API_URL=http://localhost:8000
