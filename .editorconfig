root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.py]
indent_style = space
indent_size = 4

[*.md]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

# Use spaces for config formats that expect them
[*.{yml,yaml,json,toml}]
indent_style = space
indent_size = 2
